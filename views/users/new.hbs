<head>
  <link rel='stylesheet' href='/stylesheets/styles.css' />
</head>

<body>
<script>
  function myFunction() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
<div class="register">
  <h3>Register</h3>
  <form action="/users" method="post"> 
    <label for="name"> Name: </label> 
    <input type="text" placeholder="name" name="name" required pattern=".*\S+.*"><br>
    <br>
    <label for="email"> Email: </label> 
    <input type="email" placeholder="email" name="email" required pattern=".*\S+.*"><br>
    <br>
    <label for="password"> Password: </label> 
    <input type="password" id="myInput" placeholder="password" name="password" required pattern=".*\S+.*"><br><br>
    <input type="checkbox" onclick="myFunction()"> Show Password
    <input id="submit" type="submit" value="Submit" />
  </form>
</div>

<script src="/public/interface.js"></script>
</body>